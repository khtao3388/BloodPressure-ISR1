@page "/bpreadings"

@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using BloodPressure.Models
@inject IDbContextFactory<BPReadingContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="bpreadings/create">Create New</a>
</p>

<QuickGrid Class="table" Items="DbFactory.CreateDbContext().BPReading">
    <PropertyColumn Property="bpreading => bpreading.DateAndTime" />
    <PropertyColumn Property="bpreading => bpreading.Systolic" />
    <PropertyColumn Property="bpreading => bpreading.Diastolic" />
    <PropertyColumn Property="bpreading => bpreading.HeartRate" />

    <TemplateColumn Context="bpreading">
        <a href="@($"bpreadings/edit?id={bpreading.Id}")">Edit</a> |
        <a href="@($"bpreadings/details?id={bpreading.Id}")">Details</a> |
        <a href="@($"bpreadings/delete?id={bpreading.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
